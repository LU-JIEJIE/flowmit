{
  "name": "flowmit",
  "type": "module",
  "version": "0.0.6",
  "packageManager": "pnpm@9.0.6",
  "description": "help you commit more smoothly",
  "author": "LU-JIEJIE",
  "license": "MIT",
  "homepage": "https://github.com/LU-JIEJIE/flowmit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LU-JIEJIE/flowmit.git"
  },
  "bugs": "https://github.com/LU-JIEJIE/flowmit/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "fm": "./dist/index.cjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "lint": "eslint .",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "nr build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.0",
    "@types/node": "^20.12.7",
    "@types/prompts": "^2.4.9",
    "bumpp": "^9.4.1",
    "changelogithub": "^0.13.7",
    "eslint": "^9.1.1",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vitest": "^1.5.2"
  },
  "dependencies": {
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
